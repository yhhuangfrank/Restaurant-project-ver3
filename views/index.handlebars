{{! ./views/index.handlebars }}

<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input
            type="text"
            name="keyword"
            class="form-control"
            placeholder="輸入餐廳、分類或評分"
            aria-label="Restaurant Name..."
            value="{{keyword}}"
            aria-describedby="search-button"
          />
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i
                class="fas fa-search"
              ></i></button>
          </div>
        </div>
      </form>
      <a href="/restaurants/new" class="btn btn-primary">新增餐廳</a>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">
        {{! show all restaurant by loop }}
        {{#each restaurants}}
          <div class="col">
            <a href="/restaurants/{{this._id}}" class="text-secondary">
              <div class="card">
                <img
                  class="card-img-top"
                  src="{{this.image}}"
                  alt="{{this.name}}"
                />
                <div class="card-body p-3">
                  <h6 class="card-title mb-1">{{this.name}}</h6>

                  <div class="restaurant-category mb-1">
                    <i class="fas fa-utensils pr-2"></i>
                    {{this.category}}
                  </div>

                  <span class="badge badge-pill bg-danger font-weight-normal">
                    {{this.rating}}
                    <i class="fas fa-star fa-xs"></i>
                  </span>

                </div>
              </div>
              <div
                class="link-container mt-2 mb-3 d-flex justify-content-end align-items-center"
              >
                <a
                  href="/restaurants/{{this._id}}/edit"
                  class="btn btn-secondary btn-sm"
                >Edit</a>
                <a
                  href="/restaurants/{{this._id}}"
                  class="btn btn-primary btn-sm ms-2"
                >Detail</a>
                <form
                  action="/restaurants/{{this._id}}/delete"
                  method="POST"
                  class="ms-2 my-0 d-flex align-items-center"
                >
                  <button
                    type="submit"
                    class="btn btn-danger btn-sm"
                  >Delete</button>
                </form>
              </div>
            </a>
          </div>

        {{/each}}
      </div>
    </div>
  </div>
</div>